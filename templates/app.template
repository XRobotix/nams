      $http.get(URL + "/"+model+"/dash")
      .then(function(r){
        if (r.data)
        {
              cb(r.data);
        }
        else
        {
          Materialize.toast("No Data! "+model+" #"+r.data.id+" getDashData failed", 5000);
              cb({});
        }
      },function(e){
        log(e);
        Materialize.toast("ERROR! "+model+" #"+r.data.id+" getDashData failed", 5000);
      });
    }
})
